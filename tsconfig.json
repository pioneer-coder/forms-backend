{
  "extends": "./tsconfig.build.json",
  "compilerOptions": {
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"],
      "@test/*": ["test/*"]
    },
    "types": [
      "chai-as-promised",
      "chai",
      "dirty-chai",
      "mocha",
      "node",
      "sinon-chai"
    ]
  },
  "include": ["scripts/**/*.ts", ".github/**/*.ts", "src/**/*.ts", "test/**/*.ts"],
  "exclude": ["node_modules"]
}
